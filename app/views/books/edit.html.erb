<h1><strong>Editing Book</strong></h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>

 
<% end %> 
<%= link_to "Show", book_path(@book.id) %>

 <p><a href="/books">Back</a></p>
 
 